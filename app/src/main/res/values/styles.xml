<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MaterialThemeSupportBase" parent="Theme.MaterialComponents.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColorPrimary">@color/textBlack</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorHint">@color/textSecondary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="ToolbarStyle">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:elevation">@dimen/_7sdp</item>
    </style>

    <style name="smallBottomItemText">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>